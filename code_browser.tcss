Screen {
    background: $surface-darken-1;
    &:inline {
        height: 50vh;
    }
}

#tree-view {
    display: none;
    scrollbar-gutter: stable;
    overflow: auto;
    width: auto;
    height: 100%;
    dock: left;
}

CodeBrowser.-show-tree #tree-view {
    display: block;
    max-width: 20%;
}
CodeBrowser  #symbol-list
{
    max-width: 30%;
    overflow:auto;
    height: 100%;
    dock:right;
}
#code-view {
    overflow: auto scroll;
    min-width: 100%;
}
#code {
    width: auto;
}
